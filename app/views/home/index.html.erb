	<div class='row'>
		<%= image_tag("twitter-big.png", :alt => "twitter_fart") %>
	</div>
	
	<div class='row'>
		<% if current_user %>
			Welcome <%= current_user.name %>!
			<%= link_to "Sign Out", signout_path %>
